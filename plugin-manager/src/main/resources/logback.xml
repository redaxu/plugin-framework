<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 默认的一些配置-->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 配置控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 使用默认的输出格式打印${CONSOLE_LOG_PATTERN} %F打印文件名 -->
            <pattern>%clr(%d{${LOG_DATEFORMAT_PATTERN:-HH:mm:ss}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr([%10.10t]){faint} %clr(%-15.15logger{15}){yellow} %clr(%class{0}.%method:%line){cyan} %clr(:){faint} %m%n}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    <appender name="SQL_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 使用默认的输出格式打印${CONSOLE_LOG_PATTERN} -->
            <pattern>%clr(%d{${LOG_DATEFORMAT_PATTERN:-HH:mm:ss}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr([%10.10t]){faint} %clr(%-15.15logger{15}){yellow} %clr(%class{0}.%method:%line){cyan} %clr(:){faint} %n%blue(%m) %n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- 配置输出级别，加入输出方式 -->
    <logger name="io.jaegertracing.internal.reporters" level="ERROR"/>
    <logger name="RocketmqClient" additivity="false" level="ERROR"/>

    <logger name="jdbc.connection" level="ERROR"/>
    <logger name="jdbc.resultset" level="ERROR"/>
    <logger name="jdbc.sqltiming" level="ERROR"/>
    <logger name="jdbc.audit" level="ERROR"/>
    <logger name="jdbc.sqlonly" additivity="false">
        <appender-ref ref="SQL_CONSOLE"/>
    </logger>
    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>